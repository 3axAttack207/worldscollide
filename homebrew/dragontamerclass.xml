            <grant type="Archetype Feature" id="ID_WC_ARCHETYPE_FEATURE_LIGHTNING_DRAGON_TYPE_ATTACK" level="15"/>
        </rules>
    </element>
    <element name="White Dragon(ice)" type="Archetype" source="Worlds Collide" id="ID_WC_ARCHETYPE_DRAGON_TAMER_WHITE_DRAGON">
        <supports>Dragon Type</supports>
